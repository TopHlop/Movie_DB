<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_black_color</item>
        <item name="colorPrimaryDark">@color/background_black_color</item>
        <item name="colorAccent">@color/purpure_color</item>
    </style>


    <style name="LightTextStyle">
        <item name="android:textColor">@color/text_light_color</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="GrayTextStyle">
        <item name="android:textColor">@color/text_gray_color</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textColor">@color/error_message_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="NumberButton">
        <item name="android:textAppearance">@style/LightTextStyle</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">@drawable/pin_code_number_selector</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="InactiveButtonText">
        <item name="android:textColor">@color/text_gray_color</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:background">@color/search_color</item>
        <item name="android:editTextColor">@color/text_light_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="AppSearchView2" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_delete_search</item>
        <item name="queryHint">@color/text_light_color</item>
        <item name="queryBackground">@color/search_color</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ExpandedTitle">
        <item name="android:textColor">@color/text_light_color</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CollapsedTitle">
        <item name="android:textColor">@color/text_light_color</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>