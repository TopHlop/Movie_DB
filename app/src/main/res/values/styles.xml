<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_black_color</item>
        <item name="colorPrimaryDark">@color/background_black_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/text_light_color</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textColor">@color/error_message_color</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>